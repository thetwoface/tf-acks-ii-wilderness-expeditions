<section class="standard-form">
    <fieldset name="wildernessEncounters">
        <legend>Encounters in the Wilderness</legend>

        <div class="form-group">
            <label for="{{@root.partId}}-territoryType">Territory Classification</label>
            <div class="form-fields">
                <select name="territorySelect" id="{{@root.partId}}-territoryType">
                    {{selectOptions territoryOptions selected="CIVILIZED_ROAD" localize=true}}
                </select>
            </div>
            <p class="hint">
                Choose appropriate territory classification. Refer to JJ page 42 for details.
            </p>
        </div>

        <div class="form-group">
            <label for="{{@root.partId}}-terrainType">Terrain Type</label>
            <div class="form-fields">
                <select name="terrainSelect" id="{{@root.partId}}-terrainType">
                    {{selectOptions terrainOptions selected="BARRENS" localize=true}}
                </select>
            </div>
            <p class="hint">
                Choose appropriate terrain type. Refer to JJ page 42 for details.
            </p>
        </div>

        <div class="form-group">
            <div class="form-fields">
                <button type="button" data-action="generateEncounter">Generate Encounter</button>
            </div>
        </div>

    </fieldset>
</section>
